@require '../../node_modules/stylus-normalize/normalize'
@require 'index'
@require './fonts'


body-background = #F0E7DB
font-color-dark = #1B1C18
font-color-light = #302B22

body
  background: body-background
  color: font-color-dark
  font-family: "Crimson Text", georgia, serifs

h1, h2, h3
  color: font-color-light
  font-family: "Vollkorn", georgia, serifs

a[href]
  border-bottom: 1px dotted font-color-light
  color: lightness(font-color-light, 22%)
  text-decoration: none
  &:hover
    color: lightness(font-color-light, 40%)
    border-color: @color

.main-header
  h1
    border: 4px solid font-color-light
    border-bottom: 0
    margin: 1.5em 1.5rem 0
    padding-top: .75em
    text-align: center
    text-transform: uppercase
    &::after
      content: ""
      border-bottom: 4px double #1B1C18
      display: block
      padding-top: .70em
      margin: 0 auto
      width: 90%

  h2
    border: 4px solid font-color-light
    border-top: 0
    margin: 0 1.5rem 1em
    padding: 1em 0 .85em
    text-align: center
    a, a:hover
      border-bottom: 0
      color: inherit

  h1, h2
    border-image: url(/img/main-borders.svg) 23.5% / 8
    text-align: center

  for theme, color in themes
    &.{theme}::after
      content: ""
      background: url(/ + pathjoin('img', 'themes', theme) + '.jpeg')
      background-repeat: no-repeat
      border 4px double font-color-light
      display: block
      margin: 0 auto
      width: 500px
      height: 310px

article,
.intro
  font-size: 1.2em
  margin: 1em auto
  padding: 1em
  width: 38em

.intro
  margin-top: 1em
  padding-top: 0

.posts
  margin: 2em 0

  h2
    text-align: center

  .toc
    font-size: 1.2em
    width: 38em
    margin: .5em auto
    a
      color: font-color-dark
      display: flex
      justify-content: space-between
      &:hover
        color: font-color-light
      span
        background: body-background
        display: inline-block
        margin: .3em 0 -.3em
      &:hover .title
        color: lightness(font-color-light, 30%)
    ul
      padding 0 3em
    li
      list-style: none
      .title
        font-style: italic
    li.new-post
      margin-top: 0.5em
      span.title::before
        content: "+"
        font-style: normal
        padding-right: 0.5em

.post,
.preview
  header
    margin: 1em 0 .1em
    h2
      margin: 0
      display: inline-block
    .permalink
      background: url(/img/link-icon.png) no-repeat
      border: 0
      display: none
      margin-top: -.5em
      margin-left: .8em
      opacity: 0.35
      overflow: hidden
      text-indent: 110%
      white-space: nowrap
      width: 21px
      height: 23px
      &:focus
        outline: 0
    &:hover
      .permalink
        display: inline-block
  footer
    margin: .1em 0 1em
    text-indent: 2em

  img
    max-width: 100%

input[type="checkbox"][rel="dropdown"]
  display: none
input[type="checkbox"][rel="dropdown"] + label + section,
input[type="checkbox"][rel="dropdown"] + label + section + .new-comment
  display: none
input[type="checkbox"][rel="dropdown"]:checked ~ section,
input[type="checkbox"][rel="dropdown"]:checked ~ .new-comment
  display: block

label[for^="dropdown"]
  border 2px solid font-color-light
  border-image: url(/img/main-borders.svg) 23.5% / 8
  color: font-color-light
  cursor: pointer
  display: block
  font-family: "Vollkorn", georgia, serifs
  margin: 2em auto
  position: relative
  text-align: center
  width: 10em
  &::before
    content: "+"
    font-size: 1.5em
    position: absolute
    left: 0.75em
    top: -.25em
input[type="checkbox"][rel="dropdown"]:checked + label::before
  content: "â€“"
  top: -.25em

.new-comment,
.comments
  margin: 0 5em 2em
  input:not([type="submit"]),
  textarea
    display: block
    width: 100%
  textarea
    height: 8em
  input[type="submit"]
    display: block
    margin: 1em auto

  textarea[name="comment"]
    // Honeypot
    display: none
    
.comment
  font-size: 0.95em
  margin: 2em 0
  padding: 0
  width: 100%
  .author
    margin: 0
    .author-name
      font-weight: bold
      
  p:first-child
    margin-top: 0.25em
  p
    margin: 0.5em 0

.new-post
  textarea,
  input,
  .form-content
    display: block
    font-size: 1.2em
    margin: .1em auto
    width: 38em

  textarea
    height: 12em
    &[name="post"]
      display: none

  .form-content
    display: flex
    align-items: center
    textarea
      flex-grow 1
    .editmenu
      flex-grow 0
      width: 2em
      > ul
        padding: 0
        margin: 0
      > ul > li
        list-style: none
        text-align: center
        width: 39px
        height: 29px
        position: relative
        &.help
          background: url(/img/question-mark.png) no-repeat
          margin-left: 6px
          text-align: left
          .help-container
            background: lightness(body-background, 80%)
            display: none
            font-size: 0.8em
            padding: 1em
            border: 1px solid font-color-light
            position: absolute
            right: 1em
            bottom: 0
            width: 21em
            ul
              padding: 0
          &:hover
            .help-container
              display: block
        button
          background: inherit
          border: 0
          color: font-color-light
          line-height: 1.5em
          padding: .1em 0
          width: 2em
          height: 1.5em
          &.heading2
            font-weight: bold
            text-decoration: underline
          &.heading3
            font-style: italic
          &.strong
            font-weight: bold
          &.em
            font-style: italic
          &.yt, &.vimeo, &.anchor, &.img
            overflow: hidden
            white-space: nowrap
            text-indent: 110%
          &.img
            background: url(/img/picture-icon.png) no-repeat
            width: 24px
            height: 20px
          &.anchor
            background: url(/img/link-icon.png) no-repeat
            width: 21px
            height: 23px
          &.yt
            background: url(/img/youtube-icon.png) no-repeat
            width: 24px
            height: 24px
          &.vimeo
            background: url(/img/vimeo-icon.png) no-repeat
            width: 24px
            height: 24px              


.theme-nav
  ul
    display: flex
    padding: 0
    margin: 0

    li
      list-style: none
      flex-grow: 1 
      text-align: center
      height: 160px
      width: 160px
      transition: flex-grow 0.3s, width 0.3s

      for theme, color in themes
        &.{theme}
          background: url(/ + pathjoin('img', 'themes', theme) + '.jpeg')
          a p
            color: color

      &:hover
        flex-grow: 3
        width: 480px
        a
          width: 100%
          p
            font-size: 1em

      a
        color: inherit
        display: flex
        flex-direction: column
        font-size: 1.2em
        font-weight: bold
        justify-content: space-between
        width: 0
        height: 100%

        p
          font-size: 0
          text-shadow: 1px 1px black
          transition: font-size 0.3s
