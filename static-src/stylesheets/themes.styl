@require '../../node_modules/stylus-normalize/normalize'
@require 'index'
@require './fonts'


body-background = #F0E7DB

body
  background: body-background
  color: #1B1C18
  font-family: "Crimson Text", georgia, serifs

h1, h2, h3
  color: #302B22
  font-family: "Vollkorn", georgia, serifs

a[href]
  border-bottom: 1px dotted #302B22
  color: lightness(#302B22, 22%)
  text-decoration: none
  &:hover
    color: lightness(#302B22, 40%)
    border-color: @color

.main-header
  h1
    border: 4px solid #302B22
    border-bottom: 0
    margin: 1.5em 1.5rem 0
    padding-top: .75em
    text-align: center
    text-transform: uppercase
    &::after
      content: ""
      border-bottom: 4px double #1B1C18
      display: block
      padding-top: .70em
      margin: 0 auto
      width: 90%

  h2
    border: 4px solid #302B22
    border-top: 0
    margin: 0 1.5rem 1em
    padding: 1em 0 .85em
    text-align: center
    a, a:hover
      border-bottom: 0
      color: inherit

  h1, h2
    border-image: url(/img/main-borders.svg) 23.5% / 8
    text-align: center

  for theme, color in themes
    &.{theme}::after
      content: ""
      background: url(/ + pathjoin('img', 'themes', theme) + '.jpeg')
      background-repeat: no-repeat
      border 4px double #302B22
      display: block
      margin: 0 auto
      width: 500px
      height: 310px

article,
.intro
  font-size: 1.2em
  margin: 1em auto
  padding: 1em
  width: 38em

.intro
  margin-top: 1em
  padding-top: 0

.posts
  margin: 2em 0
  
  & > h2
    display: none
    
.post,
.preview
  header
    margin: 1em 0 .1em
    h2
      margin: 0
  footer
    margin: .1em 0 1em
    text-indent: 2em

  img
    max-width: 100%

input[type="checkbox"][rel="dropdown"]
  display: none
input[type="checkbox"][rel="dropdown"] + label + section,
input[type="checkbox"][rel="dropdown"] + label + section + .new-comment
  display: none
input[type="checkbox"][rel="dropdown"]:checked ~ section,
input[type="checkbox"][rel="dropdown"]:checked ~ .new-comment
  display: block

label[for^="dropdown"]
  border 2px solid #302B22
  border-image: url(/img/main-borders.svg) 23.5% / 8
  color: #302B22
  cursor: pointer
  display: block
  font-family: "Vollkorn", georgia, serifs
  margin: 2em auto
  position: relative
  text-align: center
  width: 10em
  &::before
    content: "+"
    font-size: 1.5em
    position: absolute
    left: 0.75em
    top: -.25em
input[type="checkbox"][rel="dropdown"]:checked + label::before
  content: "â€“"
  top: -.25em

.new-comment,
.comments
  margin: 0 5em 2em
  input:not([type="submit"]),
  textarea
    display: block
    width: 100%
  textarea
    height: 8em
  input[type="submit"]
    display: block
    margin: 1em auto

  textarea[name="comment"]
    // Honeypot
    display: none
    
.comment
  font-size: 0.95em
  margin: 2em 0
  padding: 0
  width: 100%
  .author
    margin: 0
    .author-name
      font-weight: bold
      
  p:first-child
    margin-top: 0.25em
  p
    margin: 0.5em 0

.new-post
  textarea,
  input
    display: block
    font-size: 1.2em
    margin: .1em auto
    width: 38em

  textarea
    height: 12em
    &[name="post"]
      display: none

.theme-nav
  ul
    display: flex
    padding: 0
    margin: 0

    li
      list-style: none
      flex-grow: 1 
      text-align: center
      height: 160px
      width: 160px
      transition: flex-grow 0.3s, width 0.3s

      for theme, color in themes
        &.{theme}
          background: url(/ + pathjoin('img', 'themes', theme) + '.jpeg')
          a p
            color: color

      &:hover
        flex-grow: 3
        width: 480px
        a
          width: 100%
          p
            font-size: 1em

      a
        color: inherit
        display: flex
        flex-direction: column
        font-size: 1.2em
        font-weight: bold
        justify-content: space-between
        width: 0
        height: 100%

        p
          font-size: 0
          text-shadow: 1px 1px black
          transition: font-size 0.3s
