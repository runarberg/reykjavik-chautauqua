@require './common/themes'

a[href]
  text-decoration: none

.main-header
  h1, h2
    text-align: center

article,
.intro
  font-size: 1.2em
  margin: 1em auto
  width: 38em

.posts
  margin: 4em 0
  
  & > h2
    display: none

.post,
.preview
  header
    margin: 1em 0 .1em
    h2
      margin: 0
  footer
    margin: .1em 0 1em
    text-indent: 2em

  img
    max-width: 100%

input[type="checkbox"][rel="state"]
  display: none
input[type="checkbox"][rel="state"] + label + section
  display: none
input[type="checkbox"][rel="state"]:checked + label + section
  display: block

label[for^="state"]
  border: 1px solid black
  border-radius: 1em
  cursor: pointer
  display: block
  margin: 2em auto
  position: relative
  text-align: center
  width: 10em
  &::before
    content: "+"
    font-size: 1.5em
    position: absolute
    left: .25em
    top: -.175em
input[type="checkbox"][rel="state"]:checked + label::before
  content: "â€“"
  top: -.25em

.new-post
  textarea,
  input
    display: block
    font-size: 1.2em
    margin: .1em auto
    width: 38em

  textarea
    height: 12em

.theme-nav
  ul
    display: flex
    padding: 0
    margin: 0

    li
      list-style: none
      flex-grow: 1
      text-align: center
      transition: flex-grow 0.3s

      for theme in themes
        &.{theme}
          background: url(/ + pathjoin('img', 'themes', theme) + '.jpeg')

      &:hover
        flex-grow: 5
        a
          visibility: visible

      a
        color: inherit
        display: flex
        flex-direction: column
        justify-content: space-between
        height: 100%
        width: 100%
        visibility: hidden

        p
          max-width: 10em
          text-shadow: 1px 1px white