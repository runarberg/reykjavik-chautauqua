@require '../../node_modules/stylus-normalize/normalize'
@require 'index'
@require './fonts'


body
  font-family: "Crimson Text", georgia, serifs

h1, h2, h3
  font-family: "Vollkorn", georgia, serifs

a[href]
  text-decoration: none

header
  font-size: 1.2em
  
  h1
    margin: 2em .5em 0.2em
    text-align: center
    text-transform: uppercase

  h2
    margin: 0.2em .5em 2em
    text-align: center

  .introduction
    max-width: 38em
    margin: .5em auto

.theme-nav
  font-size: 1.2em
  h2
    text-align: center
  ul
    justify-content: center
    margin: 0
    padding: 0
    overflow-x: scroll
    white-space: nowrap
  li
    display: inline-block
    font-size: 2em
    height: 310px
    list-style: none
    margin: 0
    overflow: hidden
    text-align: center
    width: 500px
    white-space: normal

    for theme in themes
      &.{theme}
        background: url(/ + pathjoin('img', 'themes', theme) + '.jpeg')

    a
      background: rgba(255,166,166,0.2)
      color: inherit
      display: flex
      flex-direction: column
      justify-content: space-between
      height: 100%
      width: 100%
      p
        margin: 0.25em 0.85em
        padding: 0.125em 0
        text-shadow: 1px 1px white

    &.focus a
      background: none
      p
        text-shadow: 3px 3px white
