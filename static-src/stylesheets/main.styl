@require '../../node_modules/stylus-normalize/normalize'
@require 'index'
@require './fonts'


body
  background: lightness(#C6A575, 90%)
  color: #1B1C18
  font-family: "Crimson Text", georgia, serifs

h1, h2, h3
  color: #302B22
  font-family: "Vollkorn", georgia, serifs

a[href]
  text-decoration: none

header
  background-repeat: no-repeat
  background-size: 100%
  font-size: 1.5em

  h1
    border: 4px solid #302B22
    border-bottom: none
    margin: 1.5em 1.5rem 0
    padding-top: .75em
    text-align: center
    text-transform: uppercase
    &::after
      content: ""
      border-bottom: 4px double #1B1C18
      display: block
      padding-top: .70em
      margin: 0 auto
      width: 90%

  h2
    border: 4px solid #302B22
    border-top: none
    margin: 0 1.5rem 2em
    padding: 1em 0 .85em
    text-align: center

  h1, h2
    border-image: url(/img/main-borders.svg) 23.5
    border-image-width: 8

  .introduction
    max-width: 38em
    margin: .5em auto

  .heading-picture
    background: url("/img/chautauqua-header.jpeg")
    background-repeat: no-repeat
    border: 4px double #1B1C18
    display: block
    margin: 0 auto 2em
    width: 750px
    height: 332px

.theme-nav
  font-size: 1.4em
  margin-top: 4em
  h2
    border: 4px solid #302B22
    border-image: url(/img/main-borders.svg) 23.5
    border-image-width: 8
    color: #302B22
    padding 1em 0 1.2em
    margin: 1em auto 2em
    width: 90%
    text-align: center

  ul
    justify-content: center
    margin: 0
    padding: 0
    overflow-x: auto
    white-space: nowrap
  li
    display: inline-block
    font-size: 2em
    height: 310px
    list-style: none
    margin: 0
    padding: 0
    overflow: auto
    text-align: center
    width: 500px
    white-space: normal

    for theme in themes
      &.{theme}
        background: url(/ + pathjoin('img', 'themes', theme) + '.jpeg')

    a
      background: rgba(255,166,166,0.2)
      color: inherit
      display: flex
      flex-direction: column
      font-family: "Vollkorn"
      font-weight: bold
      justify-content: space-between
      height: 100%
      width: 100%
      p
        margin: 0.25em 0.85em
        padding: 0.125em 0

    &.focus a
      background: none
      p
        color: #A9CCE4
        text-shadow: 1px 1px black
