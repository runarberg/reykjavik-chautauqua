@require 'index'
@require './defaults'

@require 'snippets/first-main-header'
@require 'snippets/second-main-header'


.heading-picture
  background: url("/img/chautauqua-header.jpeg")
  background-repeat: no-repeat
  border: 4px double font-color-dark
  display: block
  margin: 0 auto 2em
  width: 750px
  height: 332px
  @media screen and (max-width: 760px)
    width: 98%
    height: 0
    padding-bottom: 43.5%
    background-size: contain

@require 'snippets/theme-nav'

.events,
.introduction
  font-size: 1.1em
  line-height: 1.3em
  width: 38em
  max-width: 90%
  margin: 1em auto 0

  h2
    font-size: 2em
    margin-top: 2em
    text-align: center

.page-nav
  font-size: 1.35em
  margin: 2em auto
  text-align: center
  a
    border: 0
    color: inherit

@require 'snippets/email-signup-form'