- var title = "Reykjav√≠k Chautauqua"

doctype html
html(lang="en")
  head
    title= title
    link(rel="stylesheet", href="/stylesheets/main.css")
  body
    header
      h1= title
      article.introduction
        include:markdown introduction.md
    nav.theme-nav
      ul.theme-list
        each theme in themes
          li
            a(href=theme.url)= theme.name
            p= theme.month