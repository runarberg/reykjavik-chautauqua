- var title = "Reykjavík Chautauqua"
- var subtitle = "Institute of Lower Learning"

doctype html
html(lang="en")
  head
    title= title
    link(rel="stylesheet", href="/stylesheets/main.css")
    meta(name="viewport", content="width=device-width, maximum-scale=1")
  body
    header
      h1= title
      h2= subtitle
      div.heading-picture
      article.introduction
        include:markdown introduction.md
    nav.theme-nav
      h2 Topics
      a.scroll.left(href="#") «
      a.scroll.right(href="#") »
      ul.theme-list
        each theme in themes
          li(class=(theme.focus ? "focus " : " ") + theme.url.slice(1))
            a(href=theme.url)
              p= theme.dateStr
              p= theme.name

    section#events.events
      h2 Events
      ul.event-list
        each event in events
          li
            a(href=event.permalink)= event.title

    div.email-signup-form#mc_embed_signup
      form(action="//reyqua.us9.list-manage.com/subscribe/post?u=34db5ed86b65db22d9ec6a3ef&amp;id=e2cc057825", method="post", id="mc-embedded-subscribe-form", name="mc-embedded-subscribe-form", class="validate", target="_blank", novalidate)
        label(for="mce-EMAIL") Email
        input(type="email", value="", name="EMAIL", class="required email", id="mce-EMAIL")
        input(type="text" name="b_34db5ed86b65db22d9ec6a3ef_e2cc057825", tabindex="-1", value="")
        input(type="submit", value="Join", name="subscribe", id="mc-embedded-subscribe", class="button")
      label(for="mce-EMAIL") Join our email list

    footer
      include:markdown about.md
         
    script(src="/scripts/main.js")